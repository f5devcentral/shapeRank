public type ^ <CombinatorialParser[TensorTypeAST]> = (
  ^super type wrap: 
      [:t <TypeAST> |
	   t asTensorType
	]
)
public typeId ^ <CombinatorialParser[TypeIdAST]> = (
  ^super typeId wrap:
		[:id_token <Token> |
