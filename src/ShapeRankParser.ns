  ^super param wrapper:
		[:id_token  <Token> :rs <{Token. TypeAST}> |
          | t = rs isNil ifTrue: [TypeIdAST named: #Unit position: {0. 0}] ifFalse: [rs last]. |
		  ParameterAST named: id_token value type: t position: {id_token start. t end}
		]
)
